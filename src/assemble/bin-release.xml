<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
		<format>tar.bz2</format>
	</formats>
	
	<includeBaseDirectory>true</includeBaseDirectory>
	
	<moduleSets>
		<moduleSet>
			<binaries>
				<outputDirectory>ext</outputDirectory>
				<unpack>false</unpack>
			</binaries>
			
			<includes>
				<include>${project.groupId}:ext-parser:jar:${project.version}</include>
				<include>${project.groupId}:ext-loader:jar:${project.version}</include>
			</includes>
		</moduleSet>
	</moduleSets>
	
	<files>
		<file>
			<source>target/site/Deployment-Style-Sheet.pdf</source>
			<fileMode>0644</fileMode>
			<outputDirectory>doc</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
</assembly>
